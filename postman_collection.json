{
  "info": {
    "name": "sm-market-value",
    "description": "API for scoring yearling lots for market value prediction",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "api_key",
      "value": "BJgvUFhQqB1OGDcSmnDdGKC6q_uxgTDUYrQaeP7EMpw",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        }
      },
      "response": []
    },
    {
      "name": "Score Sale (with DB write)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_key}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/score/2098?write_to_db=true",
          "host": ["{{base_url}}"],
          "path": ["api", "score", "2098"],
          "query": [
            {
              "key": "write_to_db",
              "value": "true",
              "description": "Write results to tblHorseAnalytics"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Score Sale (JSON only, no DB write)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_key}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/score/2098?write_to_db=false",
          "host": ["{{base_url}}"],
          "path": ["api", "score", "2098"],
          "query": [
            {
              "key": "write_to_db",
              "value": "false",
              "description": "Return JSON only, do not write to database"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Score Sale (Pre-sale with session median)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_key}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/score/2098?write_to_db=false&session_median=360000",
          "host": ["{{base_url}}"],
          "path": ["api", "score", "2098"],
          "query": [
            {
              "key": "write_to_db",
              "value": "false"
            },
            {
              "key": "session_median",
              "value": "360000",
              "description": "Override session median for pre-sale scoring"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Score NZL Sale (pooled lookback)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_key}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/score/2096?write_to_db=false&session_median=50000",
          "host": ["{{base_url}}"],
          "path": ["api", "score", "2096"],
          "query": [
            {
              "key": "write_to_db",
              "value": "false"
            },
            {
              "key": "session_median",
              "value": "50000",
              "description": "NZL sale - uses AUS+NZL lookback"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Invalid API Key (should fail)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-API-Key",
            "value": "invalid-key",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/score/2098",
          "host": ["{{base_url}}"],
          "path": ["api", "score", "2098"]
        }
      },
      "response": []
    },
    {
      "name": "Swagger Docs",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/docs",
          "host": ["{{base_url}}"],
          "path": ["docs"]
        }
      },
      "response": []
    }
  ]
}
